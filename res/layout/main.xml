<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background"
    android:padding="5sp"
    >
    <LinearLayout 
        android:id="@+id/InnerRelativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		>
    	<ImageView 
    		android:id="@+id/imageRadio404"
        	android:layout_width="0dip"
        	android:layout_height="fill_parent"
        	android:layout_weight="3"    		
    		android:layout_marginRight="15sp"
    		android:src="@drawable/radio404"
    		/>
    	<LinearLayout
        	android:layout_width="0dip"
        	android:layout_height="fill_parent"
        	android:layout_weight="2"
    		>
    		<ImageView 
    			android:id="@+id/imageRadioAndNews"
        		android:layout_width="0dip"
        		android:layout_height="wrap_content"
        		android:layout_weight="1"
        		android:layout_gravity="bottom"
    			android:src="@drawable/radioandnews"
    			android:layout_marginRight="10sp"
    			android:layout_toRightOf="@id/imageRadio404"
    			/>
    	</LinearLayout>
    </LinearLayout>
	<View
		android:id="@+id/verticalSeparationTop" 
    	android:layout_width="fill_parent" 
    	android:layout_height="2dp" 
    	android:layout_below="@id/InnerRelativeLayout"
    	android:background="#000"
    	android:layout_marginBottom="0sp"
    	android:layout_marginTop="10sp"
    /> 
    <LinearLayout 
        android:id="@+id/InnerRelativeLayoutForButton"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/verticalSeparationTop"
		>
    	<LinearLayout
        	android:layout_width="0dip"
        	android:layout_height="fill_parent"
        	android:layout_weight="1"
    		>		
			<ImageButton
				android:id="@+id/start404"
				android:src="@drawable/play"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_marginLeft="5sp"
        		android:layout_marginRight="5sp"
        		android:scaleType="fitCenter"
        		android:background="#fff"
				/>
		</LinearLayout>
    	<LinearLayout
        	android:layout_width="0dip"
        	android:layout_height="fill_parent"
        	android:layout_weight="1"
    		>
			<ImageButton
				android:id="@+id/stop404"
				android:src="@drawable/stop"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_marginLeft="5sp"
        		android:layout_marginRight="5sp"
        		android:scaleType="fitCenter"
        		android:background="#fff"
				/>
		</LinearLayout>
	</LinearLayout>
	<ImageView 
		android:id="@+id/image404"
        android:layout_below="@id/image404"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
       	android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
    	android:src="@drawable/image404"
    	/>
   
    <TextView 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="@string/legal"
    	android:layout_above="@id/image404"
        />
</RelativeLayout>
